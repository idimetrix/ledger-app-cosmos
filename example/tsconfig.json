{
	"compilerOptions": {
		"noImplicitAny": false,
		"declaration": false,
		"removeComments": true,
		"noImplicitReturns": true,
		"noUnusedLocals": false,
		"outDir": "dist",
		"allowJs": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"isolatedModules": false,
		"noEmit": false,
		"locale": "en",
		"rootDirs": ["src", "../src"],
		"alwaysStrict": true,
		"diagnostics": false,
		"extendedDiagnostics": false,
		"noImplicitThis": true,
		"strictNullChecks": false,
		"suppressImplicitAnyIndexErrors": true,
		"typeRoots": ["node_modules/@types"],
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"types": ["@types/node", "@nuxt/types", "webpack", "webpack-env", "jest", "node", "web-bluetooth"],
		"paths": {
			"@/*": ["src/*"],
			"~/*": ["src/*"]
		},
		"lib": ["esnext", "dom", "dom.iterable", "scripthost"]
	},
	"include": [
		"../src/**/*.ts",
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"types/**/*.ts",
		"types/**/*.tsx",
		"types/**/*.vue",
		"tests/**/*.ts",
		"tests/**/*.tsx",
		"tests/**/*.vue"
	],
	"exclude": ["dist", "node_modules"]
}
